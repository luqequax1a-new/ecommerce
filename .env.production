# Laravel E-commerce Production Environment Configuration
# Copy this to .env and update with your production values

# Application
APP_NAME="E-Ticaret"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Europe/Istanbul
APP_URL=https://your-domain.com
APP_LOCALE=tr
APP_FALLBACK_LOCALE=en

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# Cache Configuration (for shared hosting optimization)
CACHE_DRIVER=file
CACHE_PREFIX=ecommerce_cache

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue Configuration (file driver for shared hosting)
QUEUE_CONNECTION=sync

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Logging Configuration
LOG_CHANNEL=single
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# File Storage (local for shared hosting)
FILESYSTEM_DISK=local

# Broadcasting (disabled for shared hosting)
BROADCAST_DRIVER=log

# Performance Optimization
DEBUGBAR_ENABLED=false
VIEW_CACHE_ENABLED=true

# Security
SECURE_HEADERS=true
HTTPS_ONLY=true

# Image Optimization
IMAGE_DRIVER=gd
IMAGE_QUALITY=85
IMAGE_MAX_WIDTH=2000
IMAGE_MAX_HEIGHT=2000

# Product Configuration
PRODUCTS_PER_PAGE=12
RELATED_PRODUCTS_COUNT=4

# SEO Configuration
SEO_DEFAULT_TITLE="E-Ticaret Sitesi"
SEO_DEFAULT_DESCRIPTION="Kaliteli ürünler uygun fiyatlarla"
SEO_DEFAULT_KEYWORDS="e-ticaret, online alışveriş, ürün"

# System Configuration
SYSTEM_TIMEZONE=Europe/Istanbul
SYSTEM_LOCALE=tr_TR
SYSTEM_CURRENCY=TRY
SYSTEM_CURRENCY_SYMBOL=₺

# Shared Hosting Optimizations
OPCACHE_ENABLE=true
MEMORY_LIMIT=256M
MAX_EXECUTION_TIME=300
MAX_INPUT_VARS=3000

# File Upload Limits
MAX_FILE_SIZE=10240
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_DISK=local

# Maintenance Mode
MAINTENANCE_MESSAGE="Sistemimiz güncelleniyor. Kısa süre sonra tekrar deneyin."
MAINTENANCE_ALLOWED_IPS=

# Analytics (if needed)
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=

# Payment Gateway Configuration (add as needed)
# PAYPAL_CLIENT_ID=
# PAYPAL_CLIENT_SECRET=
# STRIPE_KEY=
# STRIPE_SECRET=

# Social Login (if needed)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# FACEBOOK_CLIENT_ID=
# FACEBOOK_CLIENT_SECRET=